</script>
<script>
  // Function to print the certificate container
  function printCertificate() {
      // Use html2canvas to capture the content as an image
      html2canvas(document.getElementById('certificateContainer')).then(canvas => {
        const imageData = canvas.toDataURL('image/png');

        // Create a new window to display the captured content as an image
        const printWindow = window.open('', '_blank');
        printWindow.document.write('<img src="' + imageData + '" style="width:100%;">');

        // Trigger printing when the image has loaded
        printWindow.document.querySelector('img').onload = function() {
          printWindow.print();
        };
      });
    }

    function downloadCertificate() {
      // Use html2canvas to capture the content as an image
      html2canvas(document.getElementById('certificateContainer')).then(canvas => {
        // Convert canvas to image data URL
        const imageData = canvas.toDataURL('image/png');

        // Create a link element
        const downloadLink = document.createElement('a');
        downloadLink.href = imageData;
        downloadLink.download = 'certificate.png'; // Set the download file name
        downloadLink.click(); // Simulate click to trigger download
      });
    }
</script>

<script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>

</html>
