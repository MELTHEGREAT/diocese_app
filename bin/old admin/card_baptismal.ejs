<script>
    function showCardByUsername() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
        const cards = document.querySelectorAll('.card');

        cards.forEach(card => {
            const fullName = card.querySelector('h3').innerText.toLowerCase();

            if (fullName.includes(searchTerm)) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }

    document.getElementById('searchButton').addEventListener('click', showCardByUsername);
</script>
<script>
    // Function to preview image before uploading
    function previewImage(event) {
        var reader = new FileReader();
        reader.onload = function(){
            var preview = document.getElementById('preview');
            preview.src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    }
    document.getElementById('image_data').addEventListener('change', previewImage);
</script>
