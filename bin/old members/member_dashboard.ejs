<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/member_dashboard.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Member Dashboard</title>
</head>

<body>
    <div class="side-menu">

        <div class="brand-name">
            <h1>San Roque</h1>
        </div>
        <ul>     
            <li id="document" class="active_menu" onclick="navigateTo('/member_document')">
                <img src="admin_img/reading-book (1).png" alt="">&nbsp;<span>Document</span>
            </li>
            <li id="events" onclick="navigateTo('/to_member_donation')">
                <img src="admin_img/school.png" alt="">&nbsp;<span>Donate Now</span>
            </li>
            <li id="notifications" onclick="navigateTo('/to_member_schedule')">
                <img src="admin_img/payment.png" alt="">&nbsp;<span>Schedule Now</span>
            </li>
            <li id="help" onclick="navigateTo('/to_member_request')">
                <img src="admin_img/help-web-button.png" alt="">&nbsp;<span>Request Document</span>
            </li>
            <li id="settings" onclick="navigateTo('/toSettings')">
                <img src="admin_img/settings.png" alt="">&nbsp;<span>Settings</span>
            </li>
            <li id="settings" onclick="confirmLogout()">
                <img src="admin_img/settings.png" alt="">&nbsp;<span>Logout</span>
            </li>
        </ul>
    </div>

    <div class="container">
        <div class="header">
            <div class="nav">
                <div class="search">
                    <input type="text" placeholder="Search..">
                    <button type="submit"><img src="admin_img/search.png" alt=""></button>

                </div>
                <div class="user">
                    <a href="/chart" class="btn">Chart</a>
                    <img src="admin_img/notifications.png" alt="">
                    <div class="img-case">
                        <img src="admin_img/user.png" alt=""><h1 class="username"><%= userEmail %></h1>
                       
                        <div class="dropdown-content">
                            <a href="#" onclick="confirmLogout()">Logout</a>
                            <a href="#">Settings</a>
                        </div>
                    </div>
                    
                    
                </div>
            </div>
        </div>
        <div class="content">
            <div class="cards">
                
                <div class="card">
                    
                    <div class="card_image">
                        
                        <img class="card_certi" height="200" width="350" src="images1/default_certificate.png" alt="">
                        <div class="overlay"></div><h1>Baptismal Certificate</h1>
                        <button class="download_button" onclick="downloadImage()">Download</button>
                    </div>
                </div>
                

                <div class="card">
                    <div class="box">
                        <h1>See your</h1>
                        <h3>Baptismal</h3>
                    </div>
                    <div class="icon-case">
                        <img src="admin_img/students.png" alt="">
                        <div><a href="/see_baptismal"><i class="fa fa-arrow-right" aria-hidden="true"></i></a></div>
                    </div>
                </div>

                <div class="card">
                    <div class="box">
                        <h1>Compil</h1>
                        <h3>Confirmation Certificate</h3>
                    </div>
                    <div class="icon-case">
                        <img src="admin_img/students.png" alt="">
                        <div><a href="/toadminschedule"><i class="fa fa-arrow-right" aria-hidden="true"></i></a></div>
                    </div>
                </div>

                <div class="card">
                    <div class="box">
                        <h1>5986</h1>
                        <h3>Baptistmal</h3>
                    </div>
                    <div class="icon-case">
                        <img src="admin_img/students.png" alt="">
                        <div><a href="/tobaptismal"><i class="fa fa-arrow-right" aria-hidden="true"></i></a></div>
                    </div>
                </div>

                <div class="card">
                    <div class="box">
                        <h1>5</h1>
                        <h3>Donations</h3>
                    </div>
                    <div class="icon-case">
                        <img src="admin_img/income.png"alt=""> 
                        <div><a href="/todonations"><i class="fa fa-arrow-right" aria-hidden="true"></i></a></div>
                        <!-- <a href="/todonations"><img src="admin_img/schools.png" alt="">></a> -->
                    </div>
                </div>

                <div class="card">
                    <div class="box">
                        <h1>350000</h1>
                        <h3>Tithes</h3>
                    </div>
                    <div class="icon-case">
                        <img src="admin_img/income.png" alt="">
                        <div><a href="/todonations"><i class="fa fa-arrow-right" aria-hidden="true"></i></a></div>
                    </div>
                </div>

            </div>
           
        </div>
    </div>
</body>

<script>
    
   function navigateTo(route) {
    window.location.href = route;
  }

  function downloadImage() {
    // Replace with the actual image URL
    let imageUrl = 'images1/default_certificate.png';
    let imageFileName = 'certificate.png'; // Change the filename as needed

    let a = document.createElement('a');
    a.href = imageUrl;
    a.download = imageFileName;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
}

</script>
<script src="js/routes.js"></script>






</html>